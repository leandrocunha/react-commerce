html
	box-sizing border-box

*,
*:before,
*:after
	box-sizing inherit

body
	font-family $Roboto

.btn
	background-color #ECECEC
	border none
	border-radius 5px
	color #000
	display inline-block
	font-family $Roboto
	font-size 14px
	font-weight 700
	padding 20px 25px
	text-decoration none
	text-transform uppercase

	&.btn-white
		background-color #fff
		color #000
